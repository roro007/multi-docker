{
 "AWSEBDockerrunVersion": 2,
 "containerDefinitions": [
     {
         "name": "client",
         "image": "romil618/multi-client",
         "hostname": "client",
         "essential": false

     },
     {
        "name": "server",
        "image": "romil618/multi-server",
        "hostname": "api",
        "essential": false
     },
     {
         "name": "worker",
         "image": "romil618/multi-worker",
         "hostname": "worker",
         "essential": false
     },
     
     {
        "name": "nginx",
        "image": "romil618/multi-nginx",
        "hostname": "nginx",
        "essential": false,
        "portMappings": [
            {
                "hostPort": 80,
                "containerPort": 80
            }
        ],
        "links":["client", "server"]
    }
 ]

}
